<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pvp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.studiows.ohmock.pvpActivity">

    <kr.studiows.ohmock.PlayView
        android:id="@+id/PlayView"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <kr.studiows.ohmock.DefaultButton
        android:id="@+id/p2Launch"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <kr.studiows.ohmock.DefaultButton
        android:id="@+id/p2Undo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <kr.studiows.ohmock.DefaultButton
        android:id="@+id/p1Launch"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <kr.studiows.ohmock.DefaultButton
        android:id="@+id/p1Undo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <kr.studiows.ohmock.DefaultButton
        android:id="@+id/p1GiveUp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/p1Launch"
        android:layout_toStartOf="@+id/p1Launch"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <kr.studiows.ohmock.DefaultButton
        android:id="@+id/p2GiveUp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/p2Undo"
        android:layout_toStartOf="@+id/p2Undo"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />
</RelativeLayout>
